<h2> <strong>Confirmation Page</strong> </h2>

<%= form_with(model: @post, local: true) do |form| %>
<div class="text-center">
<div class="field">
<%= form.label :Your_post %>
<h5><%= form.hidden_field :content , class: "field"%></h5>
</div>

<%= form.hidden_field :image %>
<p>Post:<%= @post.content %></p>
<%= image_tag(@post.image.url) if @post.image && @post.image.url %>
<%= form.hidden_field :image_cache %>
<%= form.hidden_field :user_id %>
<%= form.hidden_field :id %>
</div>

<div class="text-center">
<br>
<br>
<%= form.submit "submit" , class: "btn btn-primary"%>
<%= form.submit "back", name:'back' , class: "btn" %>
</div>

<% end %>
